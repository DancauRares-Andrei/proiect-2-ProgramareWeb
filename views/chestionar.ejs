<style>
  body {
  font-family: Arial, sans-serif;
}

h1 {
  text-align: center;
  font-size: 2.5rem;
  margin-top: 2rem;
}

h2 {
  font-size: 1.5rem;
  margin-top: 2rem;
}

label {
  display: block;
  margin-bottom: 1rem;
  font-size: 1.2rem;
}

input[type="radio"] {
  margin-right: 0.5rem;
  vertical-align: middle;
}

button[type="submit"] {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 1rem;
  font-size: 1.2rem;
  margin-top: 2rem;
  cursor: pointer;
}

button[type="submit"]:hover {
  background-color: #3e8e41;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
}

</style>
<h1>Chestionar</h1>
<form method="post" action="/rezultat-chestionar">
  <% intrebari.forEach(function(intrebare, index) { %>
    <h2>Întrebarea <%= index + 1 %>: <%= intrebare.intrebare %></h2>
    <% intrebare.variante.forEach(function(varianta, variantaIndex) { %>
      <label>
        <input type="radio" name="raspuns<%= index %>" value="<%= varianta %>"/>
        <%= varianta %>
      </label><br/>
    <% }) %>
  <% }) %>
  <button type="submit">Trimite răspunsurile</button>
</form>
