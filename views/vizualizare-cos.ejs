<h1>Produsele din coș:</h1>
<% if (produse.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nume</th>
        <th>Descriere</th>
        <th>Preț</th>
        <% if (utilizator) { %>
            <th>Număr bucăți</th>
            <% } %>
      </tr>
    </thead>
    <tbody>
      <% produse.forEach(function(produs) { %>
        <tr>
          <td><%= produs.id %></td>
          <td><%= produs.nume %></td>
          <td><%= produs.descriere %></td>
          <td><%= produs.pret %> RON</td>
          <td><%= produs.cantitate %> buc</td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>Coșul este gol.</p>
<% } %>
